#!/usr/bin/env raku

use lib '../lib';
use Raku::Parser;

sub MAIN(Str $filename, Bool :$ruler = False) {
	my $source = $filename.IO.slurp;
	my $pp     = Raku::Parser.new;
	if $ruler {
	    say $pp.ruler( $source );
	    return;
	}
	my $tree = $pp.to-tree( $source );

	say $pp.dump-tree( $tree );
}
